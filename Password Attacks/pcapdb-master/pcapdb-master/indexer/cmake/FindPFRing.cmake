FIND_LIBRARY(PFRING_LIBRARY
    NAMES
        pfring
)

FIND_PATH(PFRING_INCLUDE_DIR
    NAMES
        pfring.h
)

SET(PFRING_INCLUDE_DIRS ${PFRING_INCLUDE_DIR})
SET(PFRING_LIBRARIES ${PFRING_LIBRARY})

INCLUDE(CheckFunctionExists)
