IF(PFRING_INCLUDE_DIRS AND PFRING_LIBRARIES)
    SET( PFRING_FOUND "YES" )
ENDIF(PFRING_INCLUDE_DIRS AND PFRING_LIBRARIES)

MARK_AS_ADVANCED(
    PFRING_LIBRARIES
    PFRING_INCLUDE_DIRS
)
